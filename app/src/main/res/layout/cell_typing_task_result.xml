<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:orientation="vertical"
>

    <TextView
        android:id="@+id/taskNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:letterSpacing="@dimen/title_letter_spacing"
        android:background="@drawable/background_capsule_accent_fill"
        style="@style/RegularWhite14"
        />

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:letterSpacing="@dimen/title_letter_spacing"
        style="@style/RegularBlack14"
        />

    <TextView
        android:id="@+id/timeValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/RegularBlack30"
    />

    <TextView
        android:id="@+id/secondTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:letterSpacing="@dimen/title_letter_spacing"
        style="@style/RegularBlack14"
        />

    <TextView
        android:id="@+id/secondTimeValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/RegularBlack30"
        />

</LinearLayout>